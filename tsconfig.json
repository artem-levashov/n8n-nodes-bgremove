{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2020"],
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  }
,
  "exclude": [
    "node_modules",
    "dist"
  ]
}
